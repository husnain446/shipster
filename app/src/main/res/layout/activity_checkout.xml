<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/simple_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/experience_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_sample_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_text"
        android:layout_marginTop="8dp"
        android:text="Customer Information"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_sample_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sample_two"
        android:layout_marginTop="10dp"
        android:text="@string/emil_text" />

    <TextView
        android:id="@+id/text_sample_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sample_three"
        android:layout_marginTop="10dp"
        android:text="Payment methods"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/paypal_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sample_four"
        android:layout_marginTop="10dp"
        android:text="Paypal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/checkout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@color/colorPrimary"
        android:text="Checkout"
        android:textAllCaps="false" />
</RelativeLayout>
