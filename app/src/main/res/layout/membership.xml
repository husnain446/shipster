<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/black_layout"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="78dp">

        <TextView
            android:id="@+id/current_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_centerHorizontal="true"
            android:text="CURRENT"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/member_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_textView"
            android:layout_centerHorizontal="true"
            android:text="BASIC MEMBERSHIP"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/average_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_textView"
            android:layout_centerHorizontal="true"
            android:text="for the everyday average shopper"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/black_layout"
        android:text="$9.99"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"/>

    <RelativeLayout
        android:id="@+id/green_layout"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/price_textView"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="78dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/premium_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="PREMIUM MEMBERSHIP"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/offer_textView"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/premium_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="for the frequent online shopper or business"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/price_premium_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/green_layout"
        android:text="$78.99"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"/>

    <RelativeLayout
        android:id="@+id/upgrade_layout"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/price_premium_textView"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/upgrade_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/price_upgrade_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:background="@color/gray_color"
        android:layout_below="@+id/upgrade_layout"
        android:text="Price:$78.99"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/check_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_upgrade_textView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Check"
        android:textColor="#fff"/>

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/info_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_button"
        android:text="@string/info_text"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"/>

</RelativeLayout>

